<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import de.jensd.fx.glyphs.materialdesignicons.MaterialDesignIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.effect.ColorAdjust?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox fx:id="destinationRootHBox" alignment="CENTER_RIGHT" maxHeight="40.0" maxWidth="350.0" minHeight="40.0" prefHeight="40.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.wpi.cs3733.c21.teamY.pages.DestinationItemController">
   <children>
      <Label fx:id="indexLabel" alignment="CENTER" minWidth="30.0" text="0." textFill="WHITE">
         <HBox.margin>
            <Insets left="5.0" right="5.0" />
         </HBox.margin>
         <font>
            <Font name="Arial" size="12.0" />
         </font>
      </Label>
      <JFXComboBox fx:id="destinationCB" editable="true" focusColor="WHITE" minHeight="30.0" minWidth="75.0" prefHeight="30.0" prefWidth="9999.0" promptText="Destination - Press To Select" style="-fx-prompt-text-fill: #8d8eae; -fx-base: #efeff9;" unFocusColor="WHITE">
         <effect>
            <ColorAdjust brightness="1.0" />
         </effect>
      </JFXComboBox>
      <HBox maxHeight="35.0" minHeight="35.0" prefHeight="35.0">
         <HBox.margin>
            <Insets left="10.0" right="20.0" />
         </HBox.margin>
         <children>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <JFXButton fx:id="upBtn" contentDisplay="GRAPHIC_ONLY" maxHeight="15.0" maxWidth="20.0" minHeight="15.0" minWidth="20.0" prefHeight="15.0" prefWidth="20.0">
                     <graphic>
                        <MaterialDesignIconView fill="WHITE" glyphName="MENU_UP" size="24" />
                     </graphic>
                  </JFXButton>
                  <JFXButton fx:id="downBtn" contentDisplay="GRAPHIC_ONLY" maxHeight="15.0" maxWidth="20.0" minHeight="15.0" minWidth="20.0" prefHeight="15.0" prefWidth="20.0">
                     <graphic>
                        <MaterialDesignIconView fill="WHITE" glyphName="MENU_DOWN" size="24" />
                     </graphic>
                  </JFXButton>
               </children>
            </VBox>
            <JFXButton fx:id="removeBtn" contentDisplay="GRAPHIC_ONLY" maxHeight="30.0" maxWidth="30.0" minHeight="30.0" minWidth="30.0" prefHeight="30.0" prefWidth="30.0">
               <graphic>
                  <MaterialDesignIconView fill="WHITE" glyphName="CLOSE" size="24" />
               </graphic>
            </JFXButton>
         </children>
      </HBox>
   </children>
   <padding>
      <Insets top="2.0" />
   </padding>
</HBox>
