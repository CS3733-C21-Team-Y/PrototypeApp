                           <GridPane.margin>
                              <Insets top="8.5" />
                           </GridPane.margin>
                        </SplitMenuButton>
                        <Button fx:id="testButton" mnemonicParsing="false" text="Faulkner Map Load" GridPane.halignment="CENTER" GridPane.valignment="BOTTOM">
