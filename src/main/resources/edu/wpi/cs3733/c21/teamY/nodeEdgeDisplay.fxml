                              <MenuItem fx:id="floorTwoPage" mnemonicParsing="false" text="Floor 2" />
                              <MenuItem fx:id="floorThreePage" mnemonicParsing="false" text="Floor 3" />
                              <MenuItem fx:id="floorFourPage" mnemonicParsing="false" text="Floor 4" />
                              <MenuItem fx:id="floorFivePage" mnemonicParsing="false" text="Floor 5" />
